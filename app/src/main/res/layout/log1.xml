<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="오환 속도계산기"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="30dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/loglayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/logEdt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="최고층(ex 30000)"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/loglayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/logEdt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="팻속도(ex 10.1)"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/loglayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/logEdt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="병사속도(ex100.5)"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/loglayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/logEdt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="유물 개수(ex 29)"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />
<TextView
    android:id="@+id/logTxt1"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:text="확인"
    android:gravity="center"
    android:background="#ffffff"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="유물개수"
            android:textColor="#000000"
            android:textSize="15dp"/>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="필요 배속"
            android:textSize="15dp"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/text1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="유물개수"/>
        <TextView
            android:id="@+id/text2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="필요 배속"/>
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <LinearLayout
               android:id="@+id/reLay1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="유물이름"
               android:gravity="center" />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/reLay2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="초월"
               android:gravity="center" />
               </LinearLayout>
           <LinearLayout
               android:id="@+id/reLay3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="개수" />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/reLay4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="배속"
               android:gravity="center"/>
           </LinearLayout>
           <LinearLayout
               android:id="@+id/reLay5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="추가훈장"
               android:gravity="center"/>
           </LinearLayout>
       </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:id="@+id/reLay2_1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="center" />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/reLay2_2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="center" />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/reLay2_3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center">
                   <TextView
                       android:id="@+id/resultNum"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="개수" />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/reLay2_4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center">
                   <TextView
                       android:id="@+id/resultSpeed"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="배속"
                       android:gravity="center"/>
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/reLay2_5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center">
                   <TextView
                       android:id="@+id/resultPoint"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="추가훈장"
                       android:gravity="center"/>
               </LinearLayout>
           </LinearLayout>
<android.support.v7.widget.RecyclerView
    android:id="@+id/reView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
</android.support.v7.widget.RecyclerView>
   </LinearLayout>
</LinearLayout>